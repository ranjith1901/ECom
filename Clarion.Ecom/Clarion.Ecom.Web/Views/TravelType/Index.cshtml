
@{
    ViewData["Title"] = "Traval Type";
    <link href="~/assets/css/style.css" rel="stylesheet" />
}


<div class="row wrapper white-bg page-heading">

    <div class="card shadow" style="margin-top: 0px;">
        <div class="card-body" style="display: flex;">
            <div class="col-lg-9">
                <div class="page-header" style="margin-top: 5px;margin-left:-15px;">
                    <span class="h2">Travel Type</span>
                </div>
            </div>
            <div class="col-lg-3">
                <a class="btn btn-primary" asp-action="Add" asp-controller="TravelType" style="float:right;" type="button"><i class="fa fa-plus"></i>&nbsp;&nbsp;Add New </a>
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-white">
            <span class="h2"> <i class="fa fa-search"></i> Search </span>
        </div>
        <div class="card-body">
            <form autocomplete="off">
                <div class="form-group row">
                    <label class="col-lg-2 col-form-label text-right"><strong>Travel Type</strong></label>
                    <div class="col-lg-3"><input type="text" placeholder="" class="form-control" id="txtSearchTravelType" /></div>

                    <label class="col-lg-2 col-form-label text-right"><strong>Status</strong></label>
                    <div class="col-lg-3">
                        <select class="form-control" id="ddlSearchTravelStatus">
                            <option value="-1">All</option>
                            <option value="0">Active</option>
                            <option value="1">Inactive</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row" style="margin-top:20px;">
                    <div class="btn-list col-lg-8">
                        <button class="btn btn-primary col-2" onclick="SearchTravelTypes();" type="button"><i class="fa fa-search"></i>&nbsp;&nbsp;Search</button>
                        <button class="btn btn-danger col-2" onclick="resetSearchFields();" type="button"><i class="fas fa-sync-alt"></i>&nbsp;&nbsp;Reset</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow" id="showTravelTypeGrid" style="display:none;">
        <div class="card-header bg-white">
            <span class="h2">  <i class="fa fa-list"></i> Search Result </span>
        </div>
        <div class="card-body">
            <table id="tblTravelType" style="width:100%" class="table table-striped table-bordered table-hover dataTables-example">
                <thead>
                    <tr>
                        <th style="text-align:center">Sl. No.</th>
                        <th>Travel Type Name</th>
                        <th style="text-align:center" class="no-sort">Action</th>
                    </tr>
                </thead>
                <tbody class="tooltip-demo" id="tblBodyTravelType"></tbody>
            </table>
        </div>
    </div>

</div>

@* <input type="hidden" class="form-control" value="0" id="hdnTravelTypeID" /> *@

@section Scripts {
  
    <script src="~/js/pages/traveltype.js" type="text/javascript"></script>
}

